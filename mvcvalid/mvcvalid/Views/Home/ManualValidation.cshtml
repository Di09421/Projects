@model mvcvalid.Models.student
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ManualValidation</title>
</head>
<body>
    <div> 
        @Html.ValidationSummary()
    </div>

    <div>
        @using (Html.BeginForm("Validbtps", "Home"))
